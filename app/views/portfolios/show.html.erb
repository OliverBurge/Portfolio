<div class="container portfolio-container">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag portfolio_img(@portfolio_item.thumb_image.url, 'main'), width: '100%' %>
		</div>
		<div class="col-md-5">
			<h1><%= @portfolio_item.title %></h1>

			<em><% @portfolio_item.subtitle %></em>

			<p><%= @portfolio_item.body %></p>

			<hr>

			<h3>Technologies Used:</h3>

			<% @portfolio_item.technologies.each do |t| %>
			<p><%= t.name %></p>
			<% end %>

		</div>
		<% if session[:user] = :site_admin %>
			<%= link_to "Edit", edit_portfolio_path %>
		<% end %>
	</div>
</div>

